{
  "name": "电闹播放器",
  "version": "2.3.0.0",
  "description": "电闹播放器 / nox-player: 第三方b站播放器，阿梓播放器威力加强版 / 3rd party Bilibili audio player modified from Azusa-player.",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo2-128.png",
      "128": "icons/logo2-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/contentscript.js"]
    }
  ],
  "icons": {
    "128": "icons/logo2-128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "unlimitedStorage",
    "cookies",
    "identity",
    "search"
  ],
  "host_permissions": [
    "*://*.acgvideo.com/*",
    "*://*.bilivideo.com/*",
    "*://*.bilibili.com/*",
    "*://*.hdslb.com/*",
    "*://*.cgvideo.com/*",
    "*://*.y.qq.com/*",
    "*://*.akamaized.net/*",
    "*://*.bilivideo.cn/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
