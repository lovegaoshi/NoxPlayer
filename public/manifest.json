{
  "name": "电闹播放器",
  "version": "4.1.3.0",
  "description": "电闹播放器 / nox-player: 第三方b站播放器，阿梓播放器威力加强版 / 3rd party Bilibili audio player modified from Azusa-player.",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo2-128.png",
      "128": "icons/logo2-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["js/ffmpeg-core.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/contentscript.js", "js/ffmpeg-core.js"]
    }
  ],
  "icons": {
    "128": "icons/logo2-128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "unlimitedStorage",
    "cookies",
    "identity",
    "search"
  ],
  "host_permissions": [
    "*://*.acgvideo.com/*",
    "*://*.bilivideo.com/*",
    "*://*.bilibili.com/*",
    "*://*.hdslb.com/*",
    "*://*.cgvideo.com/*",
    "*://*.y.qq.com/*",
    "*://*.akamaized.net/*",
    "*://*.bilivideo.cn/*",
    "*://*.youtube.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
